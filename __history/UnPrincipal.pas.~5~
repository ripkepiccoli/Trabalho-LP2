{$R *.dfm}

procedure TForm1.FormCreate(Sender: TObject);
const
cDataFile = 'Dados.xml';
begin
ClientDataSet1.FileName := ExtractFilePath(Application.ExeName)+ cDataFile;
if FileExists( ClientDataSet1.FileName) then
ClientDataSet1.Open
else
ClientDataSet1.CreateDataSet;
end;

end.
